<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.reiserx.coordinatorlayoutdemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".IOExampleActivity">
        </activity>
        <activity android:name=".MaterialUpActivity">
        </activity>
        <activity android:name=".FlexibleActivity">
        </activity>
        <activity android:name=".BehaviorExampleActivity">
        </activity>
        <activity android:name=".LabActivity">
        </activity>
        <activity android:name=".JikeActivity">
        </activity>
    </application>

</manifest>