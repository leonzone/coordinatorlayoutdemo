<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/drawerLayout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="RtlHardcoded"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="header examples"
                android:textAppearance="@style/TextAppearance.Header"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                style="@style/TextComponent.ItemRow"
                />

            <TextView
                android:id="@+id/main.coordinator.textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="simple coordinator example"
                android:textAppearance="@style/TextAppearance.ItemExample"
                android:drawableRight="@drawable/ic_arrow_forward_24dp"
                style="@style/TextComponent.ItemRow.Selectable"
                />

            <TextView
                android:id="@+id/main.ioexample.textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="googleio example"
                android:textAppearance="@style/TextAppearance.ItemExample"
                android:drawableRight="@drawable/ic_arrow_forward_24dp"
                style="@style/TextComponent.ItemRow.Selectable"
                />

            <TextView
                android:id="@+id/main.materialup.textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="materialup example"
                android:textAppearance="@style/TextAppearance.ItemExample"
                android:drawableRight="@drawable/ic_arrow_forward_24dp"
                style="@style/TextComponent.ItemRow.Selectable"
                />

            <TextView
                android:id="@+id/main.space.textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="flexible space example"
                android:textAppearance="@style/TextAppearance.ItemExample"
                android:drawableRight="@drawable/ic_arrow_forward_24dp"
                style="@style/TextComponent.ItemRow.Selectable"
                />

            <TextView
                android:id="@+id/main.lab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lab example"
                android:textAppearance="@style/TextAppearance.ItemExample"
                android:drawableRight="@drawable/ic_arrow_forward_24dp"
                style="@style/TextComponent.ItemRow.Selectable"
                />
            <TextView
                android:id="@+id/main.behavior.textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Behavior example"
                android:textAppearance="@style/TextAppearance.ItemExample"
                android:drawableRight="@drawable/ic_arrow_forward_24dp"
                style="@style/TextComponent.ItemRow.Selectable"
                />

            <TextView
                android:id="@+id/jike_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="jike example"
                android:textAppearance="@style/TextAppearance.ItemExample"
                android:drawableRight="@drawable/ic_arrow_forward_24dp"
                style="@style/TextComponent.ItemRow.Selectable"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>